<div class="layout form buildpack">
  <form action="/design/theme/{{=themeId}}/package" method="post">
    <div class="row">
      <label for="inputPassword" class="col-xs-2 control-label">Name:</label>
      <div class="col-xs-10">
        <input type="text" class="form-control" id="inputPassword" placeholder="Happy Family">
      </div>
    </div>

    <div class="row">
      <label class="col-xs-2">
        Share:
      </label>
      <div class="col-xs-10">
        <input type="checkbox" class="js-switch" checked />
      </div>
    </div>

    <div class="form-group">
      <input type="hidden" name="_id" value="{{=themeId}}" />
      <button class="btn btn-default btn-lg cy-btn" type="submit">Package</button>
    </div>
  </form>
  {{-include ../partials/themePreview.ejs }}
</div>

